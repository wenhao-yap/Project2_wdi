{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<div class="rWrapper">
  <h3 class="page-header">Sign Up!</h3>
  <form method="POST" action="/users">
  <div class="form-group">
    <input type="text" class="form-control" name="username" placeholder="Create username" required>
  </div>
  <div class="form-group">
    <input type="email" class="form-control" name="email" placeholder="Create email" required>
    <small class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="password" placeholder="Create password" required>
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="password2" placeholder="Confirm password" required>
  </div>
  <div class="form-group"> 
    <button type="submit" name="submit" id="rSubmit">Register</button>
  </div>
</form>
</div>
